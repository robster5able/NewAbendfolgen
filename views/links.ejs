<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Links</title>
</head>

<body class="canvas canvasPosition">



  <%- include('partials/header') %>

  <h1 class="headline font fontColorDark"><%=title%></h1>

<div class="container-sm">

  <% content.forEach(function(link) { %>
<button  onclick="location.href='<%=link.url%>'" type="submit" class="btn btn-primary font buttonText linksButtons"><%=link.name%></button>
  <% }); %>

</div>
<% if(addOrRemove == "none"){%>
<form class="" action="/" method="post">
<div class="d-flex justify-content-center marginTop80">
  <div class="btn-toolbar mx-auto" role="toolbar">
    <div class="btn-group" role="group" aria-label="First group">
      <button  type="submit" name="submit_button" value="add" class="btn font buttonText btnAbbrechenOK btn-outline-primary">Link hinzufügen</button>
      <button  type="submit" name="submit_button" value="remove" class="btn font buttonText btnAbbrechenOK btn-outline-primary">Link entfernen</button>
    </div>
  </div>
</div>
</form>
<%}else if(addOrRemove == "add"){%>
  <h1 class="headline font fontColorDark marginTop80">Link hinzufügen:</h1>
  <%}else if(addOrRemove == "remove"){%>
    <h1 class="headline font fontColorDark marginTop80">Link entfernen:</h1>
    <%}%>
<% if(addOrRemove == "add" || addOrRemove == "remove" ){%>
<form class="" action="/addOrRemoveLink" method="post">
    <div class="mb-3 form-group">
      <label class="form-label font buttonText">Name</label>
      <textarea type="text" rows="1" class="form-control font fontColorDark" name="name"></textarea>
    </div>
    <% if(addOrRemove == "add"){%>
    <div class="mb-3 form-group">
      <label class="form-label font buttonText">Url</label>
      <textarea type="text" rows="1" class="form-control font fontColorDark" name="url"></textarea>
    </div>
    <%}%>
    <div class="d-flex justify-content-center">
		  <div class="btn-toolbar mx-auto" role="toolbar">
			  <div class="btn-group" role="group" aria-label="First group">
            <button type="submit" name="submit_button" value="Abort" class="btn font buttonText btnAbbrechenOK btn-outline-primary">Abbrechen</button>
            <button type="submit" name="submit_button" value="Ok" class="btn font buttonText btnAbbrechenOK btn-outline-primary">OK</button>
        </div>
		  </div>
	  </div>
</form>
<%}%>

  <%- include('partials/footer') %>

</body>

</html>
