<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>YouTube Videos</title>
</head>

<body class="canvas canvasPosition">
  <%- include('partials/header') %>

 <!--  Used for scroll down automatically -->
  <script
    src="https://code.jquery.com/jquery-3.6.1.js"
    integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
    crossorigin="anonymous"></script>


  <h1 class="headline font fontColorDark"><%=title%></h1>


  <% var i = 0; %>
  <% content.forEach(function(video) {
if(i == 0)
{ %>

  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner" style="padding:10% align:auto">
      <div class="carousel-item active">
        <div class="d-flex justify-content-center">
          <iframe width="560" height="316" src="<%= video %>"" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>
        </div>
      </div>
<%}else{%>
    <div class="carousel-item">
      <div class="d-flex justify-content-center">
        <iframe width="560" height="315" src=<%= video %> title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen></iframe>
      </div>
    </div>
  <% }
i++;
}); %>



</div>
<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  <span class="visually-hidden">Previous</span>
</button>
<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
  <span class="carousel-control-next-icon" aria-hidden="true"></span>
  <span class="visually-hidden">Next</span>
</button>
</div>

<% if(addOrRemove == "none"){%>
<form class="" action="/" method="post">
<div class="d-flex justify-content-center marginTop80">
  <div class="btn-toolbar mx-auto" role="toolbar">
    <div class="btn-group" role="group" aria-label="First group">
      <button  type="submit" name="submit_button" value="add" class="btn font buttonText btnAbbrechenOK btn-outline-primary">Video hinzufügen</button>
      <button  type="submit" name="submit_button" value="remove" class="btn font buttonText btnAbbrechenOK btn-outline-primary">Video entfernen</button>
    </div>
  </div>
</div>
</form>
<%}else if(addOrRemove == "add"){%>
  <h1 class="headline font fontColorDark marginTop80">Video hinzufügen:</h1>
  <%}else if(addOrRemove == "remove"){%>
    <h1 class="headline font fontColorDark marginTop80">Video entfernen:</h1>
    <%}%>
<% if(addOrRemove == "add" || addOrRemove == "remove" ){%>

<!--  Scroll down automatically -->
  <script>
        $(document).ready(function() {
            $('html, body').animate({scrollTop:1000},'50');
        });
    </script>
<!--  end  -->

<form class="" action="/addOrRemoveYouTubeVideo" method="post">
    <div class="mb-3 form-group">
      <label class="form-label font buttonText">Url</label>
      <textarea type="text" rows="1" class="form-control font fontColorDark" name="url"></textarea>
    </div>
    <div class="d-flex justify-content-center">
		  <div class="btn-toolbar mx-auto" role="toolbar">
			  <div class="btn-group" role="group" aria-label="First group">
            <button type="submit" name="submit_button" value="Abort" class="margin100bottom btn font buttonText btnAbbrechenOK btn-outline-primary">Abbrechen</button>
            <button type="submit" name="submit_button" value="Ok" class="margin100bottom btn font buttonText btnAbbrechenOK btn-outline-primary">OK</button>
        </div>
		  </div>
	  </div>
</form>
<%}%>





</body>

</html>
